<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"

    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewreview"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="#FCFFFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/oidtxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        />
    <TextView
        android:id="@+id/pnametxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#03A9F4"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ppricedstxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2196F3"/>
    <TextView
        android:id="@+id/pcolorTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/plrngthTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3F51B5"/>
    <TextView
        android:id="@+id/psizeTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pproofdTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#673AB7"/>

    <TextView
        android:id="@+id/pcsemailTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9C27B0"/>
    <TextView
        android:id="@+id/pdeliveryTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4CAF50"/>
    <TextView
        android:id="@+id/pdescritTxtds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009688"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>





